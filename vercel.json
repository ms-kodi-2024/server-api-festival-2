{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "client/build/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|svg))",
      "dest": "/client/build/$1"
    },
    { "src": "/(.*)", "dest": "/server.js" }
  ]
}
